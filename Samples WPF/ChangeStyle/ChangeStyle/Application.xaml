<Application x:Class="Application"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="ListBoxWithBackColorBurlyWood" TargetType="ListBox" BasedOn="{StaticResource {x:Type ListBox}}">
            <Setter Property="Background" Value="BurlyWood" />                        
        </Style>

        <Style x:Key="ListBoxWithBackColorCornflowerBlue" TargetType="ListBox" BasedOn="{StaticResource {x:Type ListBox}}">
            <Setter Property="Background" Value="CornflowerBlue" />
        </Style>
        
    </Application.Resources>
</Application>
