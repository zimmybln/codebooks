<Page x:Class="ControlsWorkbench.Pages.RatingControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ControlsWorkbench"
    Title="RatingControl">
    <Grid Height="280" Width="558">
        <local:Rating x:Name="rcDefault" Margin="51,33,262,0" Value="2" Sections="10" Image="../Resources/Delete.png" Height="28" VerticalAlignment="Top" />
        <Label HorizontalAlignment="Left" Margin="28,114,0,138" Name="label1" Width="120"
               Content="{Binding ElementName=rcDefault, Path=Value}" ContentStringFormat="Der Wert ist {0}" 
               />
    </Grid>
</Page>
