<Page x:Class="ControlsWorkbench.Pages.StatusBarPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="StatusBarPage" xmlns:my="clr-namespace:ControlsWorkbench"> 
    <Grid>
        <Button Command="my:GlobalCommands.SetStatusTextCommand" CommandParameter="{Binding ElementName=txtStatusText, Path=Text}" HorizontalAlignment="Right" Margin="0,12,35,0" Name="cmdSetStatusText" Width="43" Height="23" VerticalAlignment="Top">Button</Button>
        <TextBox Height="25" Margin="10,10,84,0" Name="txtStatusText" VerticalAlignment="Top" />
    </Grid>
</Page>
