<Window x:Class="ThemedApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"
        Background="{DynamicResource WindowBackgroundBrush}">
    
    <Grid>
        <ComboBox Height="25" HorizontalAlignment="Left" Margin="43,36,0,0" Name="cboThemes" VerticalAlignment="Top" Width="298" IsEditable="True" IsReadOnly="True" SelectionChanged="OnSelectionChanged" />
        <Border BorderBrush="Silver" BorderThickness="1" Height="105" HorizontalAlignment="Left" Margin="43,121,0,0" Name="border1" VerticalAlignment="Top" Width="298"
                Background="{DynamicResource DefaultBackground}" />
        <Button Content="Standard" Height="35" HorizontalAlignment="Left" Margin="362,34,0,0" Name="button1" VerticalAlignment="Top" Width="104" Click="OnSetDefault" />
    </Grid>
</Window>
