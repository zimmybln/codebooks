<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid>
    <Grid.Background>
      <DrawingBrush x:Key="ThatchBackground" Viewport="0,0,25,25" ViewportUnits="Absolute" Stretch="None" TileMode="Tile">
          <DrawingBrush.Drawing>
                <DrawingGroup>
                    <GeometryDrawing Brush="Yellow">
                        <GeometryDrawing.Geometry>
                            <GeometryGroup>
                                 <RectangleGeometry Rect="0,0,25,25" RadiusX="0" RadiusY="0" />
                            </GeometryGroup>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    <GeometryDrawing Brush="Black">
                        <GeometryDrawing.Geometry>
                            <GeometryGroup>
                                 <EllipseGeometry Center="14,14" RadiusX="3" RadiusY="3" />
                                 <RectangleGeometry Rect="4,4,21,21" RadiusX="1" RadiusY="1" />
                            </GeometryGroup>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>

                </DrawingGroup>
            </DrawingBrush.Drawing>
      </DrawingBrush>
    </Grid.Background>
  </Grid>
</Page>