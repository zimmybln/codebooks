	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	  xmlns:local="clr-namespace:ControlWorkbenchListView"
	  mc:Ignorable="d" 
	Title="Benutzerdefinierte Ansicht von Listen" Width="350.687">
