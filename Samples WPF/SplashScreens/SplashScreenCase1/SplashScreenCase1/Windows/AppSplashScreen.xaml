<Window x:Class="SplashScreenCase1.AppSplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AppSplashScreen" Height="347" Width="620" ResizeMode="NoResize" ShowActivated="False" ShowInTaskbar="False" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.1,0.5" EndPoint="0.092,0.5" SpreadMethod="Repeat">
                <GradientStop Color="#FF051C5B" Offset="0" />
                <GradientStop Color="#FF3C41B2" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="380"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition />
            <ColumnDefinition Width="40"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Label Grid.Row="1" Grid.Column="1" Content="{Binding Status}" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="#BBFFFFFF" />
    </Grid>
</Window>
